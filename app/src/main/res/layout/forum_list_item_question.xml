<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/list_question_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_relative_layout"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/question_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            tools:text="12-2-2016"/>

        <!-- Table Row-->

        <TextView
            android:id="@+id/question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/question_date"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            tools:text="You are NUT AND XD I DONT KNOW Hi hi hi hi WTF XD XD MAN AS"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_below="@id/question_title"
            android:layout_width="match_parent"
            android:background="@drawable/border_bottom_textview"
            android:weightSum="10"
            android:padding="5dp">

            <TextView
                android:id="@+id/question_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_author_name"
                android:background="@drawable/border_left_textview"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_weight="2"
                tools:text="David"/>

            <TextView
                android:id="@+id/question_subject"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlack"
                android:layout_weight="5"
                android:gravity="center"
                tools:text="Chinese"/>

         <TextView
              android:id="@+id/question_comment_count"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_comment"
              android:background="@drawable/border_right_textview"
              android:textColor="@color/colorBlack"
              android:gravity="center"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:layout_weight="2"
              tools:text="1"/>

        </TableRow>

    </RelativeLayout>

</RelativeLayout>