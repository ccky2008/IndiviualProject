<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textColor="@color/colorBlack"
        android:paddingLeft="@dimen/appointment_dialog_text_padding"
        android:textSize="@dimen/appointment_dialog_text_size"
        android:text="@string/appointment_date_picker_text" />

    <EditText
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:focusable="false"
        android:layout_margin="@dimen/appointment_dialog_margin"/>


    <TextView
        android:id="@+id/timeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textColor="@color/colorBlack"
        android:paddingLeft="@dimen/appointment_dialog_text_padding"
        android:textSize="@dimen/appointment_dialog_text_size"
        android:text="@string/appointment_time_picker_text" />

    <EditText
        android:id="@+id/time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:focusable="false"
        android:layout_margin="@dimen/appointment_dialog_margin"/>

    <include layout="@layout/progress_overlay"/>

    <Spinner
        android:id="@+id/teacher_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_margin="@dimen/appointment_dialog_margin"/>

    <Spinner
        android:id="@+id/location_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_margin="@dimen/appointment_dialog_margin"/>

</LinearLayout>